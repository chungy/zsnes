PSR=parsegen

.SUFFIXES: .cpp .c .asm .psr

%.o: %.cpp
	@CXX@ @CFLAGS@ -o $@ -c $<

%: %.cpp
	@CXX@ @CFLAGS@ -o $@ $<

%.o: %.c
	@CC@ @CFLAGS@ -I. -o $@ -c $<

%.o: %.asm
	@NASMPATH@ @NFLAGS@ -o $@ $<

%.o: %.psr
	./${PSR} -D__LINUX__ temppsr.c $<
	@CC@ -I. -o $@ -c temppsr.c
	rm -f temppsr.c

ALL: @ZSNESEXE@

@ZSNESEXE@: ${PSR} ${ZOBJS}
	@CXX@ -o @ZSNESEXE@ ${ZOBJS} @CFLAGS@ @LDFLAGS@

${PSR}: parsegen.cpp

