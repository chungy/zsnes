.SUFFIXES: .cpp .c .asm .psr

%.o: %.cpp
	@CXX@ @CXXFLAGS@ -o $@ -c $<

%: %.cpp
	@CXX@ @CXXFLAGS@ -o $@ $<

%.o: %.c
	@CC@ @CFLAGS@ -o $@ -c $<

%.o: %.asm
	@NASMPATH@ @NFLAGS@ -o $@ $<
ifeq (${x86-64},true)
	objcopy --input-target elf32-i386 --output-target elf64-x86-64 $@ $@
endif

%.o: %.psr
	./${PSR} -D__UNIXSDL__ temppsr.c $<
	@CC@ -I. -O1 -o $@ -c temppsr.c
	rm -f temppsr.c

ALL: @ZSNESEXE@

@ZSNESEXE@: ${PSR} ${ZOBJS}
	@CXX@ -o @ZSNESEXE@ ${ZOBJS} @CXXFLAGS@ @LDFLAGS@

${PSR}: parsegen.cpp

ALL:
